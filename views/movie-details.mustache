<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="title" content="Watch {{movieTitle}} on Chatflix" />
    <title></title>

    <!-- primary meta tags -->
    <meta
      name="description"
      content="Watch {{movieTitle}} on Chatflix, the ultimate streaming destination."
    />


    <!-- Open Graph tags -->
    <meta property="og:type" content="video.movie" />
    <meta property="og:title" content="Watch {{movieTitle}} on Chatflix" />
    <meta property="og:description" content="Stream {{movieTitle}} in HD anywhere in the world with Chatflix.xyz, your streaming destination" />
    <meta property="og:image" content="/images/chatflix-logo.png" />
    <meta property="og:url" content="http://localhost:5000/movie/{{movieId}}/{{movieTitle}}?ref=og.share" />



    <!-- Favicon -->
    <link rel="shortcut icon" href="/favicon.svg" type="image/svg" />
    <!-- Prerequisite -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <!-- StyleSheet : CSS -->
    <link rel="stylesheet" href="/assets/css/style.css" />
    <!-- Scripting : JS -->
    <script src="/assets/js/global.js" defer></script>
    <script>
    window.MOVIE_ID='{{movieId}}'
    window.MOVIE_TITLE='{{movieTitle}}'
    </script>
    <script src="/assets/js/movie/detail.js" type="module"></script>
  </head>
  <body>
    <div class="center-body" style="margin:auto; max-width:1440px !important">

    <!-- Header -->
    <header class="header">
      <a href="/" >
        <img style="width:140px !important" class="logo-new" src="/assets/images/chatflix-logo-new.png" />
      </a>

      <div class="search-box" search-box>
        <div class="search-wrapper" search-wrapper>
          <input
            type="text"
            name="search"
            aria-label="search movies"
            placeholder="Search any movies..."
            class="search-field"
            autocomplete="off"
            search-field
          />
          <img
            src="/assets/images/search.png"
            alt="search"
            class="leading-icon"
            width="24"
            height="24"
          />
        </div>

        <button class="search-btn" search-toggler menu-close>
          <img
            src="/assets/images/close.png"
            width="24"
            height="24"
            alt="open search box"
          />
        </button>
      </div>

      <button class="search-btn" search-toggler menu-close>
        <img
          src="/assets/images/search.png"
          width="24"
          height="24"
          alt="open search box"
        />
      </button>

      <button class="menu-btn" menu-btn menu-toggler>
        <img
          src="/assets/images/menu.png"
          alt="open menu"
          class="menu"
          width="24"
          height="24"
        />
        <img
          src="/assets/images/menu-close.png"
          alt="close menu"
          class="close"
          width="24"
          height="24"
        />
      </button>
    </header>
    <main>
      <!-- Sidebar -->
      <nav class="sidebar" sidebar></nav>
      <div class="overlay" overlay menu-toggler></div>

      <article class="container" page-content></article>
    </main>
    </div>
  </body>
</html>
